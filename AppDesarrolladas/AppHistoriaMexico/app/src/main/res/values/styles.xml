<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Estilo para el boton de Menu -->
    <style name="btnMenu">
        <!-- Customize your theme here. -->
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_height">165dp</item>
        <item name="android:layout_width">137dp</item>
    </style>

    <!-- Estilo para Barra de Accion -->
    <style name="barAccion">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <!-- Estilo Menu Label Basicos -->
    <style name="labelBasico_Interfaz_A">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo Interfaz Apoyo -->
    <style name="tituloApoyo">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="parrafoApoyo">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
   </style>

    <!-- Estilo Interfaz Contacto -->
    <style name="labelTituloContacto">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:gravity">center</item>
    </style>



    <!-- Estilo Generales de Interfaces  -->
    <style name="labelInformacion">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo Titulos de Interfaces  -->
    <style name="labelTituloInterfaces">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:gravity">center</item>
    </style>



</resources>
